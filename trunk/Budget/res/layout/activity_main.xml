<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/LinearLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#222761"
    android:orientation="vertical"
    tools:context=".MainActivity" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
         android:orientation="vertical"
        android:paddingTop="@dimen/activity_vertical_margin_max" >
        
        <Button
            android:id="@+id/expensesButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#971823"
            android:text="@string/expensessButtonText"
            android:textColor="#ffffff"
            android:textColorHint="#ffffff"/>
        
        <Button
            android:id="@+id/revenuesButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#07994E"
            android:text="@string/revenuesButtonText"
            android:textColor="#ffffff" />

	    <Button
	        android:id="@+id/shopListButton"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:background="#1E90D9"
	        android:text="@string/shopListButtonText"
	        android:textColor="#ffffff" />
	    
	    <Button
	        android:id="@+id/statisticsButton"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:background="#A1528C"
	        android:text="@string/statisticsButtonText"
	        android:textColor="#ffffff" />

    </LinearLayout>
</LinearLayout>